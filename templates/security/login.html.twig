{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
     <form method="post" class="mt-5">
                <fieldset>
                       <center> <legend>Connectez vous</legend></center>
       <center>  <img src="images/login.png" style="width:70px;height:70px"/> <center>


                        {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                                <div class="mb-3">
                                        Bonjour {{ app.user.username }} <a class="btn btn-sm btn-danger" href="{{ path('app_logout') }}">DÃ©connexion</a>
                                </div>
                        {% else %}
                                <div class="row">
                                        <div class="col-12 mt-3">
                                          <center>      <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus placeholder="pseudo" style="width:300px"></center>
                                        </div>
                                        <div class="col-12 mt-3 mb-3">
                                              <center>  <input type="password" name="password" id="inputPassword" class="form-control" required placeholder="mot de passe" style="width:300px"></center>
                                        </div>
                                </div>
                              <center>  <button class="btn btn-primary" type="submit">
                                        Connexion
                                </button></center>
                        {% endif %}

                        <input type="hidden" name="_csrf_token"
                        value="{{ csrf_token('authenticate') }}" style="width:300px"
                        >

                        {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                                <label>
                                        <input type="checkbox" name="_remember_me"> Remember me
                                </label>
                        </div>
                        #}
                </fieldset>
        </form>
{% endblock %}
